<Window x:Class="WpfApp15.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер" Height="700" Width="916"
        Icon="Image/free-icon-isp-8445730.png" FontFamily="Segoe UI">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F0F4F8" />
        <SolidColorBrush x:Key="TextBrush" Color="#2D3748" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4A6FFF" />
        <SolidColorBrush x:Key="AccentBrush" Color="#FF5A8A" />
        <SolidColorBrush x:Key="HeaderBrush" Color="#E6EEF7" />
        <SolidColorBrush x:Key="DangerBrush" Color="#F44336" />

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                BorderBrush="#3333FF" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3250E2" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#283CAD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B8E3F" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ResetButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#718096" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5F6E82" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4E596B" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderBrush" Value="#CBD5E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Margin" Value="5,5,5,2" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#CBD5E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E2E8F0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F7FAFC" />
            <Setter Property="RowHeight" Value="28" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#EDF2F7" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        </Style>
    </Window.Resources>

    <!-- Добавляем ScrollViewer для прокрутки всего содержимого -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="{StaticResource BackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="877*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" MinHeight="350" />
                <RowDefinition Height="Auto" MinHeight="150" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" Padding="20,15" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Image/free-icon-isp-8445730.png" Width="48" Height="48" Margin="0,0,20,0" />
                    <TextBlock Text="Менеджер - Управление клиентами" FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource TextBrush}" VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="2" Margin="20,15,20,15" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Main Actions -->
                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="15" Margin="0,0,10,0" 
                    BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Управление данными" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" 
                               Foreground="{StaticResource TextBrush}" />
                        <Button Content="Показать информацию о клиентах" Click="LoadClientDetails_Click" Cursor="Hand" />
                        <Button Content="Показать договоры" Click="LoadServiceContracts_Click" />
                        <Button Content="Показать платежи клиентов" Click="LoadClientPayments_Click" />
                        <Button Content="Показать график" Click="ShowChartButton_Click" />
                        <Button Content="Выход" Click="ExitButton_Click" Background="#718096" />
                    </StackPanel>
                </Border>

                <!-- Right Panel - Client Info Form -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="15" Margin="10,0,0,0"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Действия с клиентами" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"
                                   Foreground="{StaticResource TextBrush}" />

                            <Label Content="Фамилия:" />
                            <TextBox x:Name="LastNameTextBox" />

                            <Label Content="Имя:" />
                            <TextBox x:Name="FirstNameTextBox" />

                            <Label Content="Отчество:" />
                            <TextBox x:Name="MiddleNameTextBox" />

                            <Label Content="Номер телефона:" />
                            <TextBox x:Name="PhoneNumberTextBox" />

                            <Label Content="Адрес:" />
                            <TextBox x:Name="AddressTextBox" />

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Style="{StaticResource ActionButton}" Content="Добавить клиента" 
                                    Click="AddClient_Click" Width="180" />
                                <Button Content="Создать договор" 
                                    Click="AddContract_Click" Width="180" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Style="{StaticResource ActionButton}" Content="Редактировать" 
                                    Click="EditClient_Click" Width="180" />
                                
                                <Button Style="{StaticResource DangerButton}" Content="Удалить" 
                                    Click="DeleteClient_Click" Width="180" />
                                <Button Style="{StaticResource ActionButton}" Content="Создать заявку" 
                    Click="CreateServiceRequest_Click" Margin="0,15,0,0" Width="185" />
                            </StackPanel>

                            <Button Content="Экспорт данных в Excel" Click="ExportClients_Click" Margin="0,15,0,0" Width="185" />
                            <Button Style="{StaticResource ActionButton}" Content="Сформировать договор" 
                                Click="GenerateContract_Click" Margin="0,15,0,0" Width="185" />
                            
                            
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Панель поиска -->
            <Border Grid.Row="3" Background="White" CornerRadius="10" Margin="20,15,20,10" 
                BorderBrush="#E2E8F0" BorderThickness="1" Grid.ColumnSpan="2">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Поиск и фильтрация" FontSize="16" FontWeight="Bold" 
                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,10" />

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="SearchField1" Grid.Column="0" Margin="0,0,5,0" />
                                <TextBox x:Name="SearchValue1" Grid.Column="1" Padding="5" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="SearchField2" Grid.Column="0" Margin="0,0,5,0" />
                                <TextBox x:Name="SearchValue2" Grid.Column="1" Padding="5" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Button Content="Поиск" Click="SearchButton_Click" Width="180" />
                            <Button Style="{StaticResource ResetButton}" Content="Сбросить" Click="ResetSearch_Click" Width="180" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- DataGrid с заголовком -->
            <Border Grid.Row="4" Background="White" CornerRadius="10" Margin="20,0,20,10" 
                BorderBrush="#E2E8F0" BorderThickness="1" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="250"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="DataGridHeader" 
                           Text="Информация о клиентах" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="8,4"
                           Foreground="{StaticResource TextBrush}"/>

                    <DataGrid Grid.Row="1" 
                          x:Name="dataGrid" 
                          Margin="8" 
                          AutoGenerateColumns="True" 
                          IsReadOnly="True"
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False" 
                          HeadersVisibility="Column"/>
                </Grid>
            </Border>

            <!-- Панель итогов -->
            <Border Grid.Row="5" Background="White" CornerRadius="10" Margin="20,0,20,20" 
                BorderBrush="#E2E8F0" BorderThickness="1" Grid.ColumnSpan="2">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Количество записей:" FontWeight="SemiBold" />
                        <TextBlock x:Name="RecordCountText" Text="0" Margin="0,5,0,0" FontSize="16" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="SummaryLabel1" Text="Сумма:" FontWeight="SemiBold" />
                        <TextBlock x:Name="SummaryValue1" Text="0" Margin="0,5,0,0" FontSize="16" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock x:Name="SummaryLabel2" Text="Среднее:" FontWeight="SemiBold" />
                        <TextBlock x:Name="SummaryValue2" Text="0" Margin="0,5,0,0" FontSize="16" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>