<Window x:Class="WpfApp15.TariffSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="Image/free-icon-isp-8445730.png"
        Title="Выбор тарифа" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4A6FFF" />
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3250E2" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#283CAD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E2E8F0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#F0F4F8" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Window.Resources>
    <Grid>
        <ListView x:Name="TariffsListView" Margin="12">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Тариф" DisplayMemberBinding="{Binding ServiceName}" Width="200"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding ServicePrice, StringFormat={}{0:F2} ₽}" Width="100"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding ServiceDescription}" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="12">
            <Button Content="Выбрать" Click="SelectButton_Click" Width="120"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="120"/>
        </StackPanel>
    </Grid>
</Window>