<ResourceDictionary 
                    xmlns:local="clr-namespace:WpfApp15"
					xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Color x:Key="PrimaryColor">#5B7CF8</Color>
	<Color x:Key="SecondaryColor">#A7C1FF</Color>
	<Color x:Key="TextInputColor">#C6E0FF</Color>
	<Color x:Key="TextColor">#444444</Color>
	<Color x:Key="WindowBackgroundColor">White</Color>
	<Color x:Key="FormBackgroundColor">White</Color>
	<Color x:Key="InputTextColor">Black</Color>

	<!-- Кисти -->
	<SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
	<SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
	<SolidColorBrush x:Key="TextInputBrush" Color="{StaticResource TextInputColor}"/>
	<SolidColorBrush x:Key="TextBrush" Color="White"/>
	<SolidColorBrush x:Key="TextColorBrush" Color="{StaticResource TextColor}"/>
	<SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
	<SolidColorBrush x:Key="FormBackgroundBrush" Color="{StaticResource FormBackgroundColor}"/>
	<SolidColorBrush x:Key="InputTextColorBrush" Color="{StaticResource InputTextColor}"/>

	<!-- Стиль кнопки входа -->
	<Style x:Key="SignUpButton" TargetType="Button">
		<Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Height" Value="50"/>
		<Setter Property="Margin" Value="0,10,0,0"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border Background="{TemplateBinding Background}" CornerRadius="5">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Background" Value="#4A6CE0"/>
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter Property="Background" Value="#3A57C0"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Стиль переключателя темы -->
	<Style x:Key="ThemeToggleButtonStyle" TargetType="Button">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
		<Setter Property="FontSize" Value="16"/>
	</Style>
</ResourceDictionary>